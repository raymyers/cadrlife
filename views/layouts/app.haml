%html(xmlns="http://www.w3.org/1999/xhtml")
  %head
    %title Cadrlife: ${layout.pageTitle}
    %meta(http-equiv="Content-type" content="text/html; charset=utf-8")/
    %meta(name="robots" content="index,follow")/
    %link(rel="shortcut icon" href="/favicon.ico")/
    = include.css "style.css"
    /= include.js "jquery-1.4.2.min.js"
    /= include.js "app.js"
  %body#twocolumn-left
    #container
      .wrapper
        #header
          .wrapper
            #g_title
              %h1#page-title Ray Myers
            %div(style="clear: both")
            #g_description
              %p.description I need closure(s)
            %div(style="clear: both")
        #main-content
          .wrapper
            .content-item
              #g_body
                = layout.pageContent
            %div(style="clear: both")
        #sidebar
          .wrapper
            .links
              .wrapper
                #g_sidebar
                  %p.separator(style="text-align: center; clear: both;")
                - layout.menuItems.each
                  %p
                    %a(href=it[1])= it[0]
